{
    "private": false,
    "name": "sdcalculatorweb",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build:tailwind": "tailwindcss build -i src/style/tailwind.css -o src/style/index.css",
        "build": "preact build",
        "serve": "sirv build --cors --single",
        "dev": "preact watch",
        "lint": "eslint src",
        "test": "jest",
        "update-types": "npx openapi-typescript \"${PREACT_APP_SUPABASE_URL}/rest/v1/?apikey=${PREACT_APP_SUPABASE_API_KEY}\" --version=2 --output src/types/supabase.ts"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "build/"
        ]
    },
    "dependencies": {
        "@supabase/supabase-js": "^1.35.5",
        "autoprefixer": "^10.4.8",
        "chart.js": "^3.8.2",
        "eslint-plugin-neverthrow": "^1.1.4",
        "moment": "*",
        "neverthrow": "*",
        "postcss": "^8.4.14",
        "preact": "^10.10.0",
        "preact-iso": "^2.3.0",
        "preact-render-to-string": "^5.2.1",
        "preact-router": "^3.2.1",
        "react-chartjs-2": "^4.3.1",
        "react-cookie": "*",
        "react-icons": "*",
        "react-localization": "*",
        "tailwindcss": "^3.1.8",
        "xlsx": "*"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "@types/enzyme": "^3.10.12",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.30.6",
        "@typescript-eslint/parser": "^5.30.6",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^4.0.1",
        "eslint": "^8.20.0",
        "eslint-config-preact": "^1.3.0",
        "jest": "^27.5.1",
        "jest-preset-preact": "^4.0.5",
        "preact-cli": "^3.4.0",
        "sirv-cli": "^2.0.2",
        "typescript": "^4.5.2"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.ts",
            "<rootDir>/tests/__mocks__/setupTests.ts"
        ]
    }
}
