{
    "private": false,
    "name": "sdcalculatorweb",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "build:tailwind": "tailwindcss build -i src/style/tailwind.css -o src/style/index.css",
        "build": "preact build",
        "serve": "sirv build --cors --single",
        "dev": "preact watch",
        "lint": "eslint src",
        "test": "jest",
        "update-types": "npx openapi-typescript \"${PREACT_APP_SUPABASE_URL}/rest/v1/?apikey=${PREACT_APP_SUPABASE_API_KEY}\" --version=2 --output src/types/supabase.ts"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "preact",
            "plugin:@typescript-eslint/recommended"
        ],
        "ignorePatterns": [
            "build/"
        ]
    },
    "dependencies": {
        "@supabase/supabase-js": "*",
        "autoprefixer": "*",
        "chart.js": "*",
        "eslint-plugin-neverthrow": "*",
        "moment": "*",
        "neverthrow": "*",
        "postcss": "*",
        "preact": "*",
        "preact-iso": "*",
        "preact-render-to-string": "*",
        "preact-router": "*",
        "react-chartjs-2": "*",
        "react-cookie": "*",
        "react-icons": "*",
        "react-localization": "*",
        "tailwindcss": "*",
        "xlsx": "*"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "*",
        "@types/enzyme": "*",
        "@types/jest": "*",
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "enzyme": "*",
        "enzyme-adapter-preact-pure": "*",
        "eslint": "*",
        "eslint-config-preact": "*",
        "jest": "*",
        "jest-preset-preact": "*",
        "preact-cli": "*",
        "sirv-cli": "*",
        "typescript": "*"
    },
    "jest": {
        "preset": "jest-preset-preact",
        "setupFiles": [
            "<rootDir>/tests/__mocks__/browserMocks.ts",
            "<rootDir>/tests/__mocks__/setupTests.ts"
        ]
    }
}
